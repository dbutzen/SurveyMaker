<Window x:Class="TeamC.SurveyMaker.Activator.Activator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TeamC.SurveyMaker.Activator"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Activator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--Header-->
        <Grid Grid.Row="0" Background="#3d3d3d">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1" Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CallToAction"
                                         Foreground="White"
                                         Width="30"
                                         Height="30"
                                         Margin="0 0 10 0"
                                         VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Activator"
                       FontSize="17"
                       Foreground="White"/>
                        <TextBlock Text="By Team C"
                                   FontSize="7"
                                   Foreground="White"/>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Grid>
        <!--Body-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1" Grid.Column="1">
                <DataGrid x:Name="dgvQuestions"
                          IsReadOnly="True"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Actions">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:PopupBox>
                                        <StackPanel>
                                            <Button Margin="5"
                                                    Width="100">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Edit"
                                                                         Margin="0 0 10 0"/>
                                                    <TextBlock Text="Edit"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </materialDesign:PopupBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Question" Binding="{Binding Text}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Grid>
        <Grid Grid.Row="2" Margin="10" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Content="Edit" Margin="5" Width="75"/>
                <Button Content="Delete" Margin="5" Width="75"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

    